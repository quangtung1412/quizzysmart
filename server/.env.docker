# ============================================
# Docker Environment Configuration Template
# ============================================
# Copy this file to .env and update with your values
# Keep .env secret and DO NOT commit to git

# Database
DATABASE_URL=file:/app/prisma/dev.db

# Server Port
PORT=3000

# Node Environment
NODE_ENV=production

# Production credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Base URLs (Docker uses service names for inter-container communication)
APP_BASE_URL=http://localhost
BACKEND_BASE_URL=http://backend:3000
GOOGLE_CALLBACK_URL=http://localhost/api/auth/google/callback

# CORS - Allowed Origins
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80

# Security Keys - CHANGE THESE!
SESSION_SECRET=generate-a-random-secret-key-here
JWT_SECRET=generate-another-random-secret-key-here

MAX_BODY_SIZE=15mb

# Google Gemini AI API Keys
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_KEY_IMPORT=your-gemini-import-key-here

# Telegram Bot Configuration (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# PayOS Configuration (Optional)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key

# Qdrant Vector Database
QDRANT_URL=your-qdrant-url
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=quizzysmart
