{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}